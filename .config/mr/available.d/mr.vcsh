[$HOME/.config/vcsh/repo.d/mr.git]
checkout = vcsh clone https://github.com/sublazy/mr.git mr
update   = vcsh mr pull
push     = vcsh mr remote set-url origin git@github.com:sublazy/mr.git
           vcsh mr remote set-url srht git@git.sr.ht:~nutfan/mr
           vcsh mr push srht
           vcsh mr push
status   = vcsh mr status
gc       = vcsh mr gc
srht     = vcsh mr remote add srht git@git.sr.ht:~nutfan/mr
